<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top|fill_vertical" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" android:background="@color/fondoOk"
        tools:showIn="@layout/app_bar_inicio"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        tools:context=".ui.Inicio">


    <ImageButton
            android:id="@+id/botonCompra"
            android:layout_width="200dp"
            android:layout_height="199dp"

            android:textSize="36sp" android:fontFamily="@font/anton"
            android:onClick="bCompra"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/lista" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/todo"/>
    <ImageButton
            android:id="@+id/botonMapa"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/chapuzas"

            android:textSize="36sp" android:fontFamily="@font/anton"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/botonCompra"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/mapweb" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/botonCompra" android:onClick="bSupermercado"
            android:contentDescription="@string/todo"/>
</android.support.constraint.ConstraintLayout>